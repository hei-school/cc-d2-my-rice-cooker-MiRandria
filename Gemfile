# frozen_string_literal: true

source "https://rubygems.org"

# gem "rails"
# Use the default style guide
inherit_from:
  - http://relaxed.ruby.style/latest.yml

# Indentation settings
Indentation:
  IndentationWidth:
    Width: 2             # Specify the number of spaces for each level of indentation
  AlignWith: start_of_chain # Align the first element with the start of the chain
  EnforcedStyle: spaces    # Enforce the use of spaces for indentation
  
# Naming conventions
Naming/ClassAndModuleCamelCase:
  Enabled: true

Naming/MethodName:
  Enabled: true
  EnforcedStyle: snake_case

Naming/VariableName:
  Enabled: true
  EnforcedStyle: snake_case

# Line length and indentation
Layout/LineLength:
  Max: 80

Layout/IndentationWidth:
  Width: 2

Layout/ExtraSpacing:
  EnforcedStyle: two_spaces

# Conditional expressions
Style/TernaryParentheses:
  Enabled: true

Style/TernaryOperatorToMultiline:
  Enabled: true

# Method calls
Style/MethodCallWithArgsParentheses:
  Enabled: true
  Exclude:
    - 'initializable'